  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program on MAC",
      "program": "${workspaceFolder}/src/server.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program on Win",
      "program": "${workspaceFolder}\\src\\server.js",
      "sourceMaps": true,
    },
    {
    "type": "node",
    "request": "launch",
    "name": "Mocha Tests",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "args": [
      "-u",
      "tdd",
      "--timeout",
      "999999",
      "--colors",
      "${workspaceRoot}/test"
    ],
    "internalConsoleOptions": "openOnSessionStart"
  },
  ]
}